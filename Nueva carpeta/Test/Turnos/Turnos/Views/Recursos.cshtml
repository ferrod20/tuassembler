@using System.Web.Mvc.Html
@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    <meta name="description" content="Turnos es un sistema que permite administrar y gestionar turnos.">
    <title>Turnos </title>
    <script src="http://cdn.jquerytools.org/1.2.6/full/jquery.tools.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js" type="text/javascript"></script>
    <script src="../js/EntityList.js" type="text/javascript"></script>
    <script src="../js/recursos.js" type="text/javascript"></script>
    <link href="../css/base.css" type="text/css" rel="stylesheet">
</head>
<body>
    <div id="header">
        <div id="negro">
            <div id="global-nav">
                <ul id="global-actions">
                    <li id="inicio" class="active"><a href="Sueldo.aspx">Mi cuenta</a></li>
                    <li id="estadisticas"><a href="Estadisticas.aspx">Recursos</a></li>
                    <li id="preguntas-frecuentes"><a href="PreguntasFrecuentes.aspx">Preguntas frecuentes</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="container">
            <h1>
                Recursos</h1>
            <div id="dashboard" class="box clearfix">
                <div class="secondary">
                </div>
                <div class="primary">
                    <script type="text/javascript" src="../js/Users.template.js"></script>
                    <script type="text/javascript" src="../js/UsersController.js"></script>                    
                    <div id="users-scroll">
                        <div id="users-scroll-items">
                            <div id='users-root' class="slider-panel">
                                <div id="users-root-create-btn">
                                    <input id="users-create" class="button" name="Create A New User" type="button" value="Create A New User" />
                                </div>
                                <input id="users-search" type="text" placeholder="Buscar" />
                                <div class="clear">
                                </div>
                                <label id="users-by-name" title="sort by name">
                                    Recuros actuales</label>
                                <div id='users-list' class="container2">
                                </div>
                                <div id="users-create-users-message" class="information">
                                    Con su actual suscripción puede agregar hasta 6 users más.
                                </div>
                            </div>
                            <div id="users-panel" class="slider-panel">
                                @{
                                            //Html.RenderPartial("UserForm");
                                            //Html.RenderPartial("PasswordForm");
                                    <div id="users-delete-confirmation" class="hidden">
                                        <form id="users-delete-confirmation-form" action="#" onsubmit="return false;">
                                        <fieldset>
                                            <h2>
                                                Delete Confirmation</h2>
                                            <p>
                                                Deleting this user will remove all of the user's assignments.
                                                <br />
                                                Are you sure you wish to delete this User?<br />
                                            </p>
                                            <div id="formButtons">
                                                <input id="users-delete-confirmated" class="button" name="users-delete-confirmated"
                                                    type="button" value="Yes" />
                                                <input id="users-delete-confirmation-cancel" class="button cancel" name="users-delete-confirmation-cancel"
                                                    type="button" value="Cancel" />
                                            </div>
                                        </fieldset>
                                        </form>
                                    </div>
                                    <div id="users-form-container">
                                        <form id="users-form" action="#" onsubmit="return false;">
                                        @(Html.Hidden("User.Id", 0))
                                        <div id="organizational-users-tooltip" class="tooltip">
                                            This is also your username. If you change this while you are signed on, you will
                                            be immediately signed out and have to log in again with your new username (email
                                            address).
                                        </div>
                                        <label class="info" id="info_ou_email">
                                            ?</label>
                                        <div>
                                            <label for="user_emailaddress" id="user_emailaddress_label">
                                                Email Address (This is also your Username)</label>
                                            <div>
                                                @(Html.TextBox("User.EmailAddress"))
                                            </div>
                                        </div>
                                        <div class="content_user_left">
                                            <label for="User_FirstName">
                                                First Name</label>
                                            <div>
                                                @(Html.TextBox("User.FirstName"))
                                            </div>
                                        </div>
                                        <div class="content_user_right">
                                            <label for="User_LastName">
                                                Last Name</label>
                                            <div>
                                                @(Html.TextBox("User.LastName"))
                                            </div>
                                        </div>
                                        <div class="content_user_left">
                                            <div class="users-password">
                                                <label for="User.Password">
                                                    Password</label>
                                                <div>
                                                    @(Html.TextBox("User.Password"))
                                                </div>
                                            </div>
                                        </div>
                                        <div class="content_user_right">
                                            <div class="users-password">
                                                <label for="User.ConfirmPassword">
                                                    Confirm Password</label>
                                                <div>
                                                    @(Html.TextBox("User.ConfirmPassword"))
                                                </div>
                                            </div>
                                        </div>
                                        <div id="users-grantAccess">
                                        </div>
                                        <div class="timezone">
                                            <label for="User.TimeZone">
                                                TimeZone</label>
                                            <div class="select-container">
                                                @*@(Html.TimeZoneList("User.TimeZone"))*@
                                            </div>
                                        </div>
                                        <div class="content_column_left">
                                            <div class="form-check">
                                                @(Html.CheckBox("User.Enabled"))
                                                <label for="User_Enabled">
                                                    Enabled</label>
                                            </div>
                                            <div class="form-check">
                                                @(Html.CheckBox("User.Administrator"))
                                                <label for="User_Administrator">
                                                    Administrator</label>
                                            </div>
                                            <div class="form-check">
                                                @(Html.CheckBox("User.GrantAccessToBoards"))
                                                <label for="grantAccessToBoards">
                                                    Automatically give this user access to all boards</label>
                                            </div>
                                        </div>
                                        <div class="content_column_right">
                                            <label for="User_DateFormat">
                                                Date Format</label>
                                            <div class="select-container user_dateformat">
                                                @*@(Html.DateFormatList("User.DateFormat"))*@
                                            </div>
                                        </div>
                                        <div class="clear">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                        <div>
                                            <input id="users-form-save" class="button" name="users-form-save" type="button" value="Save User" />
                                            <input id="users-form-cancel" class="button cancel" name="users-form-cancel" type="button"
                                                value="Cancel" />
                                        </div>
                                        </form>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p class="copyright">
                Copyright 2012-2012<a href="/" class="disqus">TURNOS</a></p>
            <ul>
                <li><a href="http://disqus.com/about/">Sobre Turnos</a></li>
                <li><a href="http://disqus.com/features/">Características</a></li>
                <li><a href="http://docs.disqus.com">Ayuda</a></li>
                <li><a href="http://blog.disqus.com">Blog</a></li>
                <li><a href="http://disqus.com/api/">API</a></li>
                <li><a href="http://docs.disqus.com/kb/terms-and-policies/">Términos y condiciones</a></li>
            </ul>
        </div>
    </div>
</body>
</html>
